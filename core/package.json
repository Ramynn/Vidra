{
  "name": "vidra",
  "version": "0.0.4",
  "description": "React video player in TypeScript - lightweight, customizable, and fast, with support for live streams, offline videos, multiple streaming engines, and Storyboard.",
  "private": false,
  "type": "module",
  "scripts": {
    "build": "tsup --target es5 --minify",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "format": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ramynn/vidra.git"
  },
  "keywords": [
    "react",
    "video",
    "player",
    "typescript",
    "streaming",
    "storyboard"
  ],
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@tippyjs/react": "^4.2.6",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.5",
    "hls.js": "^1.4.12",
    "jotai": "^2.5.1"
  },
  "devDependencies": {
    "@types/node": "^20.9.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "typescript": "^5.2.2"
  },
  "author": "Ramin Mohammadi",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "bugs": {
    "url": "https://github.com/Ramynn/Vidra/issues"
  },
  "homepage": "https://github.com/Ramynn/Vidra#readme",
  "license": "GPL-3.0",
  "lint-staged": {
    "*.{js,ts,tsx,json,scss}": [
      "eslint --cache --fix"
    ]
  }
}
